@model NominalPoint

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">
                Edit Nominal Point
            </h2>
            <hr />
        </div>
        <div class="mb-3">
          <label asp-for="Name"></label>
          <input type="text" asp-for="Name" class="form-control" id="inputName">
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="X"></label>
          <input type="number" step="0.000001" min="0.000001" asp-for="X" class="form-control" id="inputX">
          <span asp-validation-for="X" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="Y"></label>
          <input type="number" step="0.000001" min="0.000001" asp-for="Y" class="form-control" id="inputY">
          <span asp-validation-for="Y" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="Z"></label>
          <input type="number" step="0.000001" min="0.000001" asp-for="Z" class="form-control" id="inputZ">
          <span asp-validation-for="Z" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-secondary" style="width:150px">Update</button>
        <a asp-controller="NominalPoint" asp-action="Index" class="btn btn-outline-secondary" style="width:150px"> Back </a>
    </div>
</form>

@section Scripts 
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}