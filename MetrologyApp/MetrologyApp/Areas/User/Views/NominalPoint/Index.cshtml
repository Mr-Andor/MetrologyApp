@model IEnumerable<NominalPoint> 

@{
    ViewData["Title"] = "Index";
}



<div class="constainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">
                Nominal Points
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="NominalPoint" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-square-dotted"></i> &nbsp; Create New Point
            </a>
        </div>
    </div>
</div>
<br /> <br />

<table class="table table-borderless table-bordered table-striped table-hover" style="width: 100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                X
            </th>
            <th>
                Y
            </th>
            <th>
                Z
            </th>
            <th>
                ID
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>

                <td>
                    @obj.X
                </td>

                <td>
                    @obj.Y
                </td>

                <td>
                    @obj.Z
                </td>

                <td>
                    @obj.Id
                </td>

                <td style="max-width: 50px">
                    <div class="w-auto btn-group a" role="group" style="width: 20px">
                        <a asp-controller="NominalPoint" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                        <a asp-controller="NominalPoint" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
